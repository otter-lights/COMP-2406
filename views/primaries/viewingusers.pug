include ../partials/menubar
doctype html
html(lang='en' dir='ltr')
    head
        meta(charset='utf-8')
        link(href='/css/viewingusers.css' rel='stylesheet')
        link(href='/css/menubar.css' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Fira+Sans+Extra+Condensed&display=swap' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Inter&display=swap' rel='stylesheet')
        title #{user.username}'s Profile
    body
        +menubar
        .blackbackground
            .userheader
                p #{user.username.toUpperCase()}
                button#followbutton(type='button' name='follow') follow
            .usercard
                .sections
                    div
                        h2 WHO THEY'RE FOLLOWING
                        #followingcontainer.profileboxes
                            each person in user.peopleFollowing
                                .iconboxes
                                    img(src='/img/Profile.png' alt='')
                                    p
                                        a(href='/viewpeople') #{person}
                    div
                        h2 WATCH LIST
                        #watchlistcontainer.profileboxes
                            each movie in watchlist
                                .iconboxes
                                    img(src='/img/Video.png' alt='')
                                    p
                                        a(href='/movieprofile') #{movie.Title}
                    div
                        h2 REVIEWS
                        #reviewsboxcontainer.reviewsbox
                            each review in reviews
                                .review
                                    .left
                                        h2
                                            a(href='/movieprofile') #{review.movieTitle}
                                        img(src='/img/Video.png' alt='')
                                        p #{review.rating}/10
                                    .right
                                        if(review.hasOwnProperty("summary"))
                                            h4 Summary
                                            p #{review.summary}
                                        if(review.hasOwnProperty("fullreview"))
                                            h4 Full Review
                                            p #{review.fullreview}
