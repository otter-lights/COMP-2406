include ../partials/menubar
doctype html
html(lang='en' dir='ltr')
    head
        meta(charset='utf-8')
        link(href='/css/addmovieaddperson.css' rel='stylesheet')
        link(href='/css/menubar.css' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Fira+Sans+Extra+Condensed&display=swap' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Inter&display=swap' rel='stylesheet')
        title Add a Movie
    body
        +menubar
        .whitebackground
            p ADD A MOVIE
            .formbox
                form(method="GET" action="/movieprofile")
                    p
                        label(for='title') TITLE:
                        input#title(type='text' name='title' required)
                        br
                    p
                        label(for='releaseYear') RELEASE YEAR:
                        input#releaseYear(type='text' name='releaseYear' required)
                        br
                    p
                        label(for='runtime') RUNTIME:
                        input#runtime(type='text' name='runtime' required)
                        br
                    p
                        label(for='genres') GENRES:
                        input#genres(type='text' name='genres' required)
                        br
                    p
                        label(for='writers') WRITERS:
                        input#writers(type='text' name='writers' required)
                        br
                    p
                        label(for='directors') DIRECTORS:
                        input#directors(type='text' name='directors' required)
                        br
                    p
                        label(for='actors') ACTORS:
                        input#actors(type='text' name='actors' required)
                        br
                    p
                        label
                        button#addbutton(type='submit') ADD
